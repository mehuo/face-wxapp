.main {
  width: 300px;
}
.main .big-btn {
  width: 100%;
  background: #4c8cfe;
  color: #fff;
  margin-top: 20px;
}
.relative {
  posotion: relative;
}
.absolute {
  position: absolute;
}
.clearfix:after {
  content: "";
  display: block;
  clear: both;
}
.face_li {
  margin-top: 20px;
  background: #efefef;
  padding: 4px 4px;
  border-radius: 4px;
  position: relative;
}
.face_li image {
  width: 100px;
  height: 100px;
  float: left;
}
.face_li .cont {
  float: left;
  padding: 4px 10px;
  font-size: 12px;
  line-height: 20px;
}
.top20 {
  margin-top: 20px;
}
.box {
  position: relative;
  overflow: hidden;
  margin-bottom: 10px;
}
.box .list {
  width: 300px;
  height: 150px;
  margin: 0 auto;
  border-radius: 10px;
}
.box .title {
  font-size: 12px;
  color: #000000;
  text-align: center;
  position: absolute;
  background: rgba(229, 229, 229, 0.6);
  width: 100%;
  line-height: 24px;
  bottom: 5px;
  border-radius: 0 0 10px 10px;
}
