.main {
  width: 300px;
}
.main .big-btn {
  width: 100%;
  background: #4c8cfe;
  color: #fff;
  margin-top: 20px;
}
.relative {
  position: relative;
}
.absolute {
  position: absolute;
}
.clearfix:after {
  content: "";
  display: block;
  clear: both;
}
.face_li {
  margin-top: 20px;
  background: #efefef;
  padding: 4px 4px;
  border-radius: 4px;
  position: relative;
}
.face_li .cont {
  float: left;
  padding: 4px 10px;
  font-size: 12px;
  line-height: 20px;
}
.top20 {
  margin-top: 20px;
}
.bottom20 {
  margin-bottom: 20px;
}
.bgbox {
  position: relative;
}
.bgbox image {
  position: absolute;
}
.bgbox .line {
  animation: myScan 1s infinite alternate;
  width: 100%;
  height: 2px;
  background: #4c8cfe;
  box-shadow: 0px 2px 3px #4c8cfe;
  position: absolute;
}
.bgbox .recogbox {
  border: solid 1px red;
  box-sizing: border-box;
  position: absolute;
}
.imgbox {
  position: relative;
  overflow: hidden;
  float: left;
}
.imgbox .img {
  position: absolute;
}
@keyframes myScan {
  from {
    top: 0px;
  }
  to {
    top: 98%;
  }
}
